<h3>Edit Students Details</h3>
{{#if msg}}
<div class="alert">{{msg}}</div>
{{/if}}
{{#each rows}}
<form method="post" action="/edituser/{{this.ID}}" autocomplete="false">
<div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{this.NAME}}">
</div>
<div class="form-group">
    <label for="grade">Grade</label>
    <input type="text" name="grade" value="{{this.GRADE}}">
</div>
<div class="form-group">
    <label for="age">Age</label>
    <input type="number" name="age" value="{{this.AGE}}">
</div>
<div class="form-group">
    <label for="dob">DOB</label>
    <input type="number" name="dob" value="{{this.DOB}}">
</div>
<div class="form-group">
    <label for="address">Address</label>
    <input type="text" name="address" value="{{this.ADDRESS}}">
</div>
<div class="form-group">
    <label for="mobile">Mobile</label>
    <input type="number" name="mobile" value="{{this.MOBILE}}">
</div>
<div class="form-group">
    <button type="submit">Save Details</button>
    <a href="/">Home</a>
</div>
</form>
{{/each}}