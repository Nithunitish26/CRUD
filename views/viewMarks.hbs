{{!-- viewMarks.hbs --}}
<h3>Marks for {{student.NAME}}</h3>
<div class="student-info">
    <p><strong>Student ID:</strong> {{student.ID}}</p>
    <p><strong>Student Name:</strong> {{student.NAME}}</p>
    <p><strong>Grade:</strong> {{student.GRADE}}</p>
</div>

<div class="marks-actions">
    {{!-- <a href="/student/{{student.ID}}/marks/add" class="addbtn">Add New Subject Marks</a> --}}
    <a href="/" class="btn">Home</a>
</div>

<table>
    <thead>
        <tr>
            <td>Subject</td>
            <td>Marks</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        {{#each marks}}
        <tr>
            <td>{{this.subject_name}}</td>
            <td>{{this.marks}}</td>
            <td>
                {{!-- <a href="/student/{{../student.ID}}/marks/edit/{{this.mark_id}}" class="edit">Edit</a> --}}
                <a href="/student/{{../student.ID}}/marks/delete/{{this.mark_id}}" class="delete" 
                   onclick="return confirm('Are you sure you want to delete these marks?')">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- addMar/ks.hbs --}}
<h3>Add Subject Marks for {{student.NAME}}</h3>
<form method="post" action="/student/{{student.ID}}/marks/add">
    <div class="form-group">
        <label for="subject_name">Subject Name</label>
        <input type="text" name="subject_name" required>
    </div>
    <div class="form-group">
        <label for="marks">Marks</label>
        <input type="number" name="marks" required min="0" max="100">
    </div>
    <div class="form-group">
        <button type="submit" class="btn">Save Marks</button>
        <a href="/student/{{student.ID}}/marks" class="btn">Cancel</a>
    </div>
</form>
